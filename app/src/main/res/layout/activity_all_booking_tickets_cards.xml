<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:elevation="8dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/home_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/bg_color"
            android:fontFamily="@font/baloo"
            android:id="@+id/AllBookingsCard_RoomName"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/baloo"
                android:text="Date Booked"
                android:textColor="@color/bg_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/AllBookingsCard_DateBooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/baloo"
                android:text="Date Booked"
                android:textColor="@color/bg_color"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/Orange"
                android:fontFamily="@font/baloo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/Orange"
                android:fontFamily="@font/baloo"
                android:id="@+id/AllBookingsCard_EventTitle"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/bg_color"
                android:fontFamily="@font/baloo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/bg_color"
                android:fontFamily="@font/baloo"
                android:id="@+id/AllBookingsCard_StartTym"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/bg_color"
                android:fontFamily="@font/baloo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/bg_color"
                android:fontFamily="@font/baloo"
                android:id="@+id/AllBookingsCard_EndTym"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/bg_color"
                android:fontFamily="@font/baloo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/Orange"
                android:fontFamily="@font/baloo"
                android:id="@+id/status_show"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>